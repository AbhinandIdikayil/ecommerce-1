<!-- new and confirm password form -->

    <div id="newpassword-modal" tabindex="-1" aria-hidden="true" class="hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative p-5 w-full max-w-md max-h-full">
            <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow ">
                <!-- Modal header -->
                <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                    <h3 class="text-xl font-semibold text-gray-900 ">
                       New password
                    </h3>
                </div>
                <!-- Modal body -->
                <div class="p-4 md:p-5">
                    <form class="space-y-4" id="newpassword-form" action="/new-password" method="post">
                        <div>
                            <label for="password" class="block mb-2 text-sm font-medium text-gray-900">New password</label>
                            <input type="text" name="password" id="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="name@company.com" required>
                        </div> 
                        <div>
                            <label for="confirmPassword" class="block mb-2 text-sm font-medium text-gray-900">Confirm password</label>
                            <input type="password" name="confirmPassword" id="confirmPassword" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" placeholder="name@company.com" required>
                        </div>   
                        <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                          Verify
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    


    <script>

    let newPassword = document.getElementById('newpassword-form').addEventListener('submit',(e) => {
            e.preventDefault();
            let password = document.getElementById('password').value;
            let confirmPassword = document.getElementById('confirmPassword').value;
                fetch('/new-password',{
                    method:'POST',
                    headers:{
                        'Content-Type':'application/json'
                    },
                    body:JSON.stringify({password,confirmPassword}),
                })
                    .then((response) => {
                        if(!response){
                            throw new Error(`Network response was not ok: ${response.statusText}`)
                        }
                        return response.json()
                    })
                    .then((data) => {
                        if(data){
                            window.location.href = '/login';
                        }
                    })
                    .catch((error) => {
                        console.log(error);
                    })
        })



    let otpSuccess = document.getElementById('otp-form').addEventListener('submit',(e) => {
        e.preventDefault();
        console.log('in client')
        let confirmPasswordModal = document.getElementById('newpassword-modal');
        let otp = document.getElementById('otp').value;
        console.log("otp form server"+otp)

            fetch('/post-otp',{
                method:'POST',
                headers:{
                    'Content-Type':'application/json'
                },
                body:JSON.stringify({otp})
            })
                .then((response) => {
                    if(!response.ok){
                        throw new Error(`Network response was not ok: ${response.statusText}`)
                    }
                    return response.json()
                })
                .then((data) => {
                    if(data){
                        confirmPasswordModal.style.display = 'flex';
                    }
                }).catch((error) => {
                    console.log(error)
                })

      })

        // fetch while forgot password otp and otp page
    let forgotPasswordForm = document.getElementById('forgot-form').addEventListener('submit',(e) => {
        e.preventDefault()
        let otpModal = document.getElementById('otp-modal');
        let email = document.getElementById('email-forgot').value;
        console.log('client'+email)
        fetch('/forgot-password',{
            method:'POST',
            headers: {
            'Content-Type': 'application/json',
            },
            body: JSON.stringify({ email }),
        }).then((response) => {
            if(!response.ok){
                throw new Error(`Network response was not ok: ${response.statusText}`);
            }
            return response.json();
        }).then(data => {
            if(data){
                otpModal.style.display = 'flex'
            }
        }).catch(error => {
            console.error('Fetch error:', error.message);
        });

    })

    let emailLabel = document.getElementById('email-label')
    let login_button = document.getElementById('btn')
    let form = document.getElementById('form')
    document.getElementById('form').addEventListener('input',(e) => {
        let isEmail = false;
        if(e.target.type === 'email'){
            const regex = /^[a-z0-9.]+@[a-z0-9.-]+\.[a-z]{3}$/
            let email = e.target.value
            isEmail = regex.test(email)
            if(!isEmail){
                login_button.type = 'button'
                return emailLabel.innerHTML = 'please enter a valid email'
            }else {
                login_button.type = 'submit'
            }
            if(e.target.value.trim('').length > 0){
                emailLabel.innerHTML = ''
            }
        }
    })        
    

    let button = document.getElementById('button');
    let modal = document.getElementById('authentication-modal');
    let close = document.getElementById('close')
    button.addEventListener('click',() => {
    modal.style.display = 'flex';
    })

    close.addEventListener('click',() => {
    modal.style.display = 'none'
    })
     
    </script>
