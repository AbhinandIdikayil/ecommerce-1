        <script>
            let button = document.getElementsByClassName('delete-button');
            Array.from(button).forEach((deletebuttons,ind) => {
                deletebuttons.addEventListener('click',(e) => {                 
                    let form = document.getElementsByClassName('image-delete')[ind]
                    let id = document.getElementsByClassName('image-delete')[ind].getAttribute('data-id');
                    console.log(id)
                    let image = form.getAttribute('data-bs');
                    e.preventDefault();
                    console.log('in fetch')
                    fetch(`/admin/delete-image/${image}/${id}`,{
                        method:'POST',
                        body:{
                            'Content-type':'application/json'
                        },
                        // body:JSON.stringify({image,id})
                    }).then((response) => {
                        if(!response.ok){                            
                            throw new Error(`Network response was not ok: ${response.statusText}`);
                        }
                        return response.json()
                    }).then((data) => {
                        if(data){
                            form.remove();
                        }
                    }).catch((err) => {
                        console.log(err)
                    })

                })
            })

            let isOfferValid = false;

        </script>


