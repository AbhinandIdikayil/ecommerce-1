        <script>
            let button = document.getElementsByClassName('delete-button');
            Array.from(button).forEach((deletebuttons,ind) => {
                deletebuttons.addEventListener('click',(e) => {                 
                    let form = document.getElementsByClassName('image-delete')[ind]
                    let id = document.getElementsByClassName('image-delete')[ind].getAttribute('data-id');
                    console.log(id)
                    let image = form.getAttribute('data-bs');
                    e.preventDefault();
                    console.log('in fetch')
                    fetch(`/admin/delete-image/${image}/${id}`,{
                        method:'POST',
                        body:{
                            'Content-type':'application/json'
                        },
                        // body:JSON.stringify({image,id})
                    }).then((response) => {
                        if(!response.ok){                            
                            throw new Error(`Network response was not ok: ${response.statusText}`);
                        }
                        return response.json()
                    }).then((data) => {
                        if(data){
                            form.remove();
                        }
                    }).catch((err) => {
                        console.log(err)
                    })

                })
            })

            let isOfferValid = false;


            let isImageValid = true;
        // for checking the image format
        const ext = ['jpg','gif','png','webp','jpeg']
        let imageLabel = document.getElementById('img-label');
        document.getElementById('check-image').addEventListener('change',(e) => {
            isImageValid = false;
            const files = Array.from(e.target.files)
            files.forEach((file) => {
                let fileType = file.type.split('/').pop(); // Use pop() to get the last part after the slash
                
                if (ext.includes(fileType)) {
                    imageLabel.innerHTML = ' '
                    isImageValid = true
                    console.log(`${fileType} is a valid file type.`);
                } else {
                    imageLabel.innerHTML = '(Invalid file type)'
                    isImageValid = false 
                }
            });
        })

        let form = document.getElementById('main-form');
        form.addEventListener('submit',(e) => {
            if(isImageValid){

            }else{
                e.preventDefault()
            }
        })


        </script>


