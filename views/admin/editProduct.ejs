              <div class="container my-5">
                <div class="row justify-content-center" id="form-2" style="display: flex;">
                  <div class="col-lg-9">
                    <h1 class="mb-3">Edit product</h1>
                    <form id="main-form" action="/admin/edit/product/<%= product._id %>" method="post"
                          enctype="multipart/form-data" >
                      <div class="row g-3">
                        <div class="col-md-6">
                          <label for="your-name" class="form-label">Product Name</label>
                          <input name="productname" value="<%=product.productname %>"  type="text" class="form-control border" id="your-name" required>
                        </div>
                        <div class="col-md-6">
                            <label for="your-email" class="form-label">offer in %</label>
                            <input name="offerInPercentage" type="number" min="0" max="100"
                             value="<%= product.offer %>" class="form-control border" id="your-email"  required>
                          </div>

                        

                        <label for="option" class="form-label">Product category</label>
                        <select name="productcategory" >
                                <option name="productcategory" id="option" value="<%=product.category._id %>" > <%= product.category.categoryname %> </option>   
                                <% category.forEach ( (categories) => {%>
                                    <% if(categories.categoryname !== product.category.categoryname) {%>
                                        <option name="productcategory" id="option" value="<%=categories._id%>"> <%= categories.categoryname  %> </option>    
                                    <%}%>
                                <% }) %>                         
                        </select>
                        
                        <label for="option">section</label>
                        <select name="productsection" >
                            <option name="productsection" id="option" value="Men"> <%=product.section%></option>
                            <option name="producsection" id="option"  value="Women">Women</option>
                        </select>

                       
                          <div class="col-md-6">
                            <label for="your-email" class="form-label">product stock</label>
                            <input name="productstock" type="number" max="999999" min="1" value="<%= product.stock %>" 
                            class="form-control border" id="your-email"  required>
                          </div>
                       

                          <div class="col-md-6">
                            <label for="your-subject" class="form-label">Offer price</label>
                            <input  name="offerprice" type="text" readonly value="<%= product.price %>" class="form-control border" id="your-subject">
                          </div> 
                          <div class="col-md-12">
                            <label class="form-label">Description</label>
                            <textarea placeholder="Type here" class="form-control border"  name="productDescription" required><%=product.description%></textarea>
                          </div>
                        <div class="col-md-6 " id="image-div">
                            <label for="your-subject" class="form-label">images</label>
                            <input  name="images"  type="file" multiple class="form-control border" id="file" >                     
                        </div>
                        <div class="col-md-6">
                            <label for="your-subject" class="form-label">original price</label>
                            <input  name="originalprice" type="number" min="1" max="999999" value="<%= product.originalprice %>" class="form-control border" id="your-subject">
                          </div> 
                        
                        <!-- <div class="col-12">
                          <label for="your-message" class="form-label">product description</label>
                          <textarea class="form-control" id="your-message"  name="productstock" rows="5" required></textarea>
                        </div> -->
                        <div class="col-12">
                          <div class="row">
                            <div class="col-md-6">
                              <button  type="submit" class="btn btn-success w-100 fw-bold" >Save</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </form>

                    <div class="col-md-6 d-flex flex-wrap position-relative mt-3">
                        <% if (product.images.length > 0) { %>                        
                        <!-- Loop through the remaining images -->
                            <% for (let i = 0; i < product.images.length; i++) { %>                       
                                <form action="/admin/delete-image/<%=product.images[i]%>/proId=<%= product._id %>" data-id="<%=product._id%>" data-bs="<%=product.images[i]%>"
                                     method="post" class="image-delete position-relative">
                                    <input type="text" style="display: none;" value="<%=product._id%>" name="productId">
                                    <button class="delete-button position-absolute top-0 start-0 bg-danger mt-1 mx-1" type="submit">
                                        <i class="ri-delete-bin-fill ri-xl p-1  text-light"></i>  
                                    </button>
                                    <img class="previous-image" style="height: 125px; width: 125px;" src="/images/product/<%= product.images[i] %>" alt="">   
                                </form>                                                                  
                            <% } %>
                        <% } %> 
                    </div>    

                  </div>
                </div>
              </div>
