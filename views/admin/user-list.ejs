                                        <th>#ID</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        
                                        
                                        <th scope="col" class="">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(user.length > 0){ %>
                                        <% user.forEach((users,index) => { %>
                                            <tr class="table-user-data greCol" id="rows">      
                                                    <% if(!users.blocked) { %>
                                                        <td > <%= index+1 %> </td>
                                                        <td class="name" ><%= users.firstname %> </td>
                                                        <td class="email" > <%= users.email %> </td>
                                                       
                                                        
                                                        <td> 
                                                     <form action="/admin/block-user/<%= users._id %>" method="post" class="form-for-block"> 
                                                        <button type="submit" style="background-color: green;" data-bs="<%= users._id%>" class="badge rounded-pill   border-0" id="btn">block</button>
                                                    </form> 
                                                </td>
                                                    <% } else{ %>
                                                        <td > <%= index+1 %> </td>
                                                        <td class="name"  ><b> <%= users.firstname %> </b></td>
                                                        <td class="email" > <%= users.email %> </td>
                                                       
                                                        <td> 
                                                        <form action="/admin/unblock-user/<%= users._id %>" method="post" class="form-for-unblock"> 
                                                            <button type="submit" style="background-color: red;" data-bs="<%= users._id%>" class="badge rounded-pill  border-0" id="btn">Unblock</button>
                                                        </form> 
                                                    </td>
                                                    <% } %>
                                                
