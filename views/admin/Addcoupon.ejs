    <script>
    
        let form =document.getElementById('coupon-form');
        let couponlabel = document.getElementById('couponcode-label')
        let datelabel = document.getElementById('expdate')
        let minpricelabel = document.getElementById('minprice-label')
        let discountlabel = document.getElementById('discount-label')

        let isDiscountValid = false
        let isCouponValid = false
        let isMinpriceValid = false

        document.getElementById('discount').addEventListener('input',(e) => {
            const inputRegex =  /^[1-9]?[0-9]$/;
            isDiscountValid = inputRegex.test(e.target.value)
            console.log(isDiscountValid)
        }) 

        document.getElementById('minprice').addEventListener('input',(e) => {
            const inputRegex =  /^[0-9]+$/;
            isMinpriceValid = inputRegex.test(e.target.value)     
            console.log(isMinpriceValid)  
        }) 

        document.getElementById('couponcode').addEventListener('input',(e) => {
            isCouponValid = e.target.value.length >= 4
            console.log(isCouponValid)
        })

        let submit = 0;
        form.addEventListener('submit',async(e) => {
            

            if (!isDiscountValid) {
                e.preventDefault()
                discountlabel.innerHTML = 'Invalid input';
            } else {
                discountlabel.innerHTML = ''; // Clear any previous error messages
            }

            if (!isMinpriceValid) {
                e.preventDefault()
                minpricelabel.innerHTML = 'Invalid input';
            } else {
                minpricelabel.innerHTML = ''; // Clear any previous error messages
            }

            if (!isCouponValid) {
                e.preventDefault()
                couponlabel.innerHTML = 'atleast 4 length';
            } else {
                couponlabel.innerHTML = ''; // Clear any previous error messages
            }
            if(isCouponValid && isDiscountValid && isMinpriceValid){
                form.submit()
            }
        })

        

    </script>



