        let isName = false;
        let isPrice = false;
        let isStock = false;
        let isDesc = false;
        let isOfferValid = false;
        let isImageValid = false;
        // for checking the image format
        const ext = ['jpg','gif','png','webp','jpeg']

        document.getElementById('check-image').addEventListener('change',(e) => {
            const files = Array.from(e.target.files)
            files.forEach((file) => {
                let fileType = file.type.split('/').pop(); // Use pop() to get the last part after the slash
                
                if (ext.includes(fileType)) {
                    imageLabel.innerHTML = ' '
                    isImageValid = true
                    console.log(`${fileType} is a valid file type.`);
                } else {
                    imageLabel.innerHTML = 'Invalid file type'
                    isImageValid = false 
                }
            });
        })
 
        document.getElementById('offer').addEventListener('input',(e) => {
            const inputRegex =  /^[1-9]?[0-9]$/;
            isOfferValid = inputRegex.test(e.target.value)
        
        })
        document.getElementById('name').addEventListener('input',(e) => {
            const regex = /^[a-zA-Z0-9 ]{3,}$/
            isName = regex.test(e.target.value.trim(''))

        })
        document.getElementById('stock').addEventListener('input',(e) => {
            const regex = /^[1-9]\d*$/
            isStock = regex.test(e.target.value)
        
        })
        document.getElementById('price').addEventListener('input',(e) => {
            const regex = /^[1-9]\d*$/
            isPrice = regex.test(e.target.value)
        
        })
        
            

        let addProductForm = document.getElementById('product-add-form')
        let offerlabel = document.getElementById('offer-label');
      
        document.getElementById('product-add-form').addEventListener('submit',(e) => {
            console.log('hai from')
            if(isOfferValid && isImageValid && isName &&  isPrice && isStock){
                addProductForm.submit()
            }else if(!isOfferValid){
                console.log('hai from 1')

                e.preventDefault()
                offerlabel.innerHTML = 'Invalid input(only 1% to 99% are allowed)'
            }else if(!isImageValid){
                e.preventDefault()
                imageLabel.innerHTML = 'Invalid file type'
            }else if(!isName){
                e.preventDefault()
                productlabel.innerHTML = 'Invalid input'
            }else if(!isPrice){
                e.preventDefault()
                pricelabel.innerHTML = 'Invalid input'
            }else if(!isStock){
                e.preventDefault()
                stocklabel.innerHTML = 'Invalid input'
            }else{
                offerlabel.innerHTML = ''
                imageLabel.innerHTML = ''
                productlabel.innerHTML = ''
                pricelabel.innerHTML = ''
                stocklabel.innerHTML = ''
            }
